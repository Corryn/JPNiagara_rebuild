<link rel="stylesheet" type="text/css" href="/stylesheets/dbm.css">

<script>
if(sessionStorage.getItem("adminUser") != "banana") {
	alert("Protected page.  Redirecting...");
	window.location.replace("/home");
}
</script>

<div id="container">
	<div id="form_content">
		<div id="form" class="tabbar" >
			<div id="fct" class="formnav" data-fname="type_form">Content Type</div>
			<div id="fc" class="formnav" data-fname="content_form">Content</div>
			<div id="fp" class="formnav" data-fname="picture_form">Picture</div>
			<div id="fe" class="formnav" data-fname="event_form">Event</div>
			<div id="fs" class="formnav" data-fname="special_form">Special</div>
			<div id="fa" class="formnav" data-fname="attraction_form">Attraction</div>
		</div>
		<div id="formbox">
		</div>
	</div>

	<div id="base_content">
		<div id="base" class="tabbar" >
			<div id="bct" class="basenav" data-bname="type_base">Content Type</div>
			<div id="bc" class="basenav" data-bname="content_base">Content</div>
			<div id="bp" class="basenav" data-bname="picture_base">Picture</div>
			<div id="be" class="basenav" data-bname="event_base">Event</div>
			<div id="bs" class="basenav" data-bname="special_base">Special</div>
			<div id="ba" class="basenav" data-bname="attraction_base">Attraction</div>
		</div>
		<div id="basebox">
		</div>
	</div>
</div>

<a class="backlink" href="/admin">Back to Admin</a>

<script type="text/javascript">
$(document).ready(function(){
	$("#" + sessionStorage.getItem("fdata")).trigger("click");
	$("#" + sessionStorage.getItem("bdata")).trigger("click");
	$(window).unload(function(){
		sessionStorage.setItem("dbScroll",$("#basebox").scrollTop());
	});
});
</script>
<script type="text/javascript">

	$(".tabbar").mouseover(function() {
		$(this).find('> div').css('cursor',"default");
	});

	$(".formnav").click(function() {
		text = "dbm/" + $(this).data("fname")
		$('#formbox').load(text);
		sessionStorage.setItem("fdata",this.id);
		$(".formnav").css("background-color","#00CC00");
		$(this).css("background-color","lime");
	});

	$(".basenav").click(function() {
		text = "dbm/base/" + $(this).data("bname")
		$('#basebox').load(text , function(){ $("#basebox").scrollTop(sessionStorage.getItem("dbScroll")); });
		sessionStorage.setItem("bdata",this.id);
		$(".basenav").css("background-color","#CC00CC");
		$(this).css("background-color","magenta");
	});
</script>