<script type="text/javascript">
	var i = 0;
	$(window).resize(fixerUper);

	function fixerUper(){
		whitespaceFix();
		footerFix();
	}

	function whitespaceFix(){
		var wh = Math.max(($('html').width()-1024)/2,0);
		$("#whitespace").css("left",wh);
		$("#whitespace").height(Math.max($('html').height(),$(window).height()));
	}

	function footerFix(){	
		if ($(window).height() > $('html').height()+(405*i)){
			setToBottom();
			i = 1;
		} else {
			resizeFix();
			i = 0;
		}
	}

	function setToBottom () {
		$('footer').css("position","absolute");
		$('footer').css("bottom","0px");
	}

	function resizeFix() {
		$('footer').css("position","static");
	}

	$(window).resize();
</script>

